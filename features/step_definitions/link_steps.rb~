Given(/^I am on the homepage$/) do
  visit("/")
end

When(/^I fill "(.*?)" as Email$/) do |arg1|
  @email = arg1
  fill_in "Email", :with => email
end

When(/^I fill "(.*?)" as Password$/) do |arg1|
 @pass = arg1
  fill_in "Password", with => pass
end

When(/^I click "(.*?)" button$/) do |arg1|
  click_on "Submit"
end








